{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/sync",
            "destination": "/api/sync.js"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/((?!api/).*)",
            "destination": "/index.html"
        }
    ],
    "crons": [
        {
            "path": "/api/sync",
            "schedule": "0 6 * * 1"
        }
    ]
}